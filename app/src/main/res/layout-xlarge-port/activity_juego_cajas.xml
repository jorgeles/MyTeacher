<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/cartasBg"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/toolbar"
            android:id="@+id/toolbar_cajas"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar_cajas">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:id="@+id/izquierda"
                tools:context=".Juego_cajas">

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="80dp"
                    android:id="@+id/text1"
                    android:textSize="24dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginLeft="40dp" />

                <TextView
                android:layout_width="170dp"
                android:layout_height="80dp"
                android:id="@+id/text2"
                android:textSize="24dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/text1"/>

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="80dp"
                    android:id="@+id/text3"
                    android:textSize="24dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/text2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_below="@+id/toolbar_cajas"
                android:layout_toRightOf="@+id/izquierda"
                android:background="@color/azul100">

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
